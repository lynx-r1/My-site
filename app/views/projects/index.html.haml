- user_logged do
  = link_to 'New post', new_project_path, :id => "new_post"

#posts_search
  = render :partial => "form_search"

#projects_box
  - @projects.reverse_each do |project|
    .projects_entry
      .date= project.created_at.localtime.ctime
      %h3= project.title
      .project_img
        = image_tag project.image.url(:thumb)
      %p
        Язык:
        = project.language
      %p
        - unless project.site.blank?
          Сайт:
          = link_to project.site.to_s.gsub(/http[s]?:\/\//, "")
      = truncate_html(project.description, :length => 400)
      = link_to 'Read more...', project
      - user_logged do
        %br
        = link_to 'Edit', edit_project_path(project)
        \|
        = link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete
