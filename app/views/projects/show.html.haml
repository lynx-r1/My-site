#projects_box
  .projects_entry_show
    .date= @project.created_at.localtime.ctime
    %h3
      = @project.title
    .project_img
      = image_tag @project.image.url(:medium)
    %p
      Язык:
      = @project.language
    - unless @project.site.blank?
      %p
        Сайт:
        = link_to @project.site.to_s.gsub(/http[s]?:\/\//, ""), @project.site, :target => :_blank
    %p
      = raw(@project.description)
    %p
      - unless @project.source.url.blank? && @project.win32.url.blank? |
        && @project.bin_linux.url.blank? |
        Скачать:
        - unless @project.source.url.blank?
          = link_to "Sources,", @project.source.url
        - unless @project.bin_win32.url.blank?
          = link_to "Windows,", @project.bin_win32.url
        - unless @project.bin_linux.url.blank?
          = link_to "Linux.", @project.bin_linux.url
    - user_logged do
      = link_to 'Edit', edit_project_path(@project)
      \|
    = link_to 'Back', projects_path
