%html
  %head
    %title lynx-r
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    = javascript_include_tag :defaults
    = javascript_include_tag '//mc.yandex.ru/metrika/watch.js'
    = javascript_include_tag "http://api-maps.yandex.ru/1.1/index.xml?key=#{ApplicationController.yandex_maps_key}"
    = csrf_meta_tag
  %body
    #main_container
      #top_container
        #nav_bar= render_navigation :level => 1
      #body_hr
        %hr
      #subnav_top= render_navigation :level => 2
      #body_container
        - if flash[:notice]
          #notice= flash[:notice]
        = yield
      #subnav_bottom= render_navigation :level => :all, :expand_all => true
      #footer
        Разработчик lynx_r

    /Yandex.Metrika
    .yandex_metrika
      :javascript
        try { var yaCounter#{ApplicationController.yandex_metrika} = new Ya.Metrika(#{ApplicationController.yandex_metrika}); } catch(e){}
    %noscript
      .yandex_img
        = image_tag "//mc.yandex.ru/watch/1521043", :alt => ""
    //Yandex.Metrika
