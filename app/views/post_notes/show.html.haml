#posts_box
  .posts_entry_show
    .date= @post_note.created_at.localtime.ctime
    %h3
      = @post_note.title
    %p
      = raw(@post_note.content)
    %p
      %b Tags:
      = raw(join_tags(@post_note.blog_tags))
    - user_logged do
      = link_to 'Edit', edit_post_note_path(@post_note)
      \|
    = link_to 'Back', post_notes_path
