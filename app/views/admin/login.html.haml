#admin_login
  - form_tag do
    %fieldset
      %legend Please Log In
      .field
        %label{for: "name"} Name:
        = text_field_tag :name, params[:name]
      .field
        %label{for: "password"} Password:
        = password_field_tag :password, params[:password]
      .actions
        = submit_tag "Login"
