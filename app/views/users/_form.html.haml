= form_for @user do |f|
  -if @user.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :hashed_password
    = f.text_field :hashed_password
  .field
    = f.label :salt
    = f.text_field :salt
  .actions
    = f.submit 'Save'
