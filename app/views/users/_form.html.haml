= form_for @user, :html => { :multipart => true } do |f|
  -if @user.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    .field
      = f.label :avatar, 'Avatar'
      = f.file_field :avatar
    .field
      = f.label :name
      = f.text_field :name, :size => 40
    .field
      = f.label :password
      = f.text_field :password, :size => 40, :type => "password"
    .field
      = f.label :password_confirmation, "Confirm"
      = f.text_field :password_confirmation, :size => 40, :type => "password"
    .actions
      = f.submit 'Save'
